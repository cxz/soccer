<h1>Listing teams</h1>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>Team</th>
    <th>#Players</th>
  </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.players.size %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br />

